<div class = "le-havre-rounded">Produtos Disponíveis</div>
<table>
  <tr>
    <th>Título</th>
    <th>Preço</th>
    <th>Taxa</th>
    <th>Custo</th>
    <th>Lucro</th>
    <th>Quantidade</th>
    <th></th>
    <th>Ações</th>
    <th></th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td <%if sale.title.index("usado")%><%= "class = 'usado'"%><%end%>><%= sale.title %></td>
    <td><%= sale.price %></td>
    <td><%= sale.tax %></td>
    <td><%= sale.cost %></td>
    <td><%= '%.2f' % (sale.price - (sale.price * sale.tax) - sale.cost) %></td>
    <td <%if sale.quantity == 0%><%= "class = 'red'"%><%end%>> <%= sale.quantity %></td>    
    <td><%= link_to 'Mostrar', sale %></td>
    <td><%= link_to 'Editar', edit_sale_path(sale) %></td>
    <td><%= link_to image_tag("trash.png"), sale, :confirm => 'Tem certeza que deseja deletar?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Produto', new_sale_path %>
