  <tr>
    <th width = 150>Nome</th>
    <th width = 150>Apelido</th>
    <th width = 200>Endereço</th>
    <th width = 20 >Produto</th>
    <th width = 10>Lucro</th>  
    <th width = 10>Pago?</th>
    <th width = 150>Email</th>
    <th width = 30></th>
    
  </tr>

<% buyers.each do |buyer| %>
  <tr>
    <td  title = '<%= buyer.name %>'><%= truncate(buyer.name.capitalize.slice(/\w+/), :length =>15) %></td>
    <td <% if buyer.nickname.length > 15 %> title = '<%= buyer.nickname %>' <% end %>><%= truncate(buyer.nickname, :length => 15) %></td>
    <td  title = '<%= buyer.address %>'><%= buyer.city %>, <%= buyer.state %></td>
    <td ><%= buyer.sale.title %></td>
    <td ><%= '%.2f' % buyer.profit %></td>
    <td <%if !buyer.paid %><%= "class = 'red'"%>>Não!<%else%>>Sim<%end%>
    <td  ><%= buyer.email %></td>
    <td ><%= link_to image_tag("lupa.png"), buyer %>
    
    <%= link_to image_tag("lapis.png"), edit_buyer_path(buyer) %>
    <%= link_to image_tag("trash.png"),  buyer, :confirm => 'Tem certeza que deseja deletar?', :method => :delete %></td>
  </tr>
<%end%>

