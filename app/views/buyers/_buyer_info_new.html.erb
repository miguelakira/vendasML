<% buyers.each do |buyer| %>
  <tr>
    <td title = <%= buyer.email %>><%= buyer.name.capitalize.slice(/\w+/) %></span></td>
    <td><%= buyer.nickname %></td>
    <td><%= buyer.city %>, <%= buyer.state %></td>
    <td <%if buyer.sale.title.downcase.index("*")%><%= "class = 'red'"%><%end%>><%= buyer.sale.title %></td>
    <td><%= '%.2f' % buyer.profit %></td>
    <td <%if !buyer.paid %><%= "class = 'red'"%>>Não!<%else%>><%= "Sim" %><%end%>
    <td><%= link_to image_tag("lupa.png"), buyer %></td>
    <td><%= link_to image_tag("lapis.png"), edit_buyer_path(buyer) %></td>
    <td><%= link_to image_tag("trash.png"),  buyer, :confirm => 'Tem certeza que deseja deletar?', :method => :delete %></td>
  </tr>
<%end%>

