<%= form_for(@buyer) do |f| %>
  <% if @buyer.errors.any? %>
    <div id="error">
      <h2><%= pluralize(@buyer.errors.count, "error") %> prohibited this buyer from being saved:</h2>

      <ul>
      <% @buyer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :sale_id %><br />
    <%= f.collection_select(:sale_id, @sales, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
<div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <% if @buyer.state %>
    <%= f.select(:state, options_for_select(ESTADOS, @buyer.state)) %>
    <% else%>
    <%= f.select(:state, options_for_select(ESTADOS)) %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :sent %><br />
    <%= f.check_box :sent %>
  </div>
  <div class="field">
    <%= f.label :tracking %><br />
    <%= f.text_field :tracking %>
  </div>
  
  <div class="field">
    <%= f.label :finished %><br />
    <%= f.check_box :finished %>
  </div>
  <div class="field">
    <%= f.label :paid %><br />
    <%= f.check_box :paid %>
  </div>
  <div class="field">
    <%= f.label "Enviar e-mail?" %><br />
    <%= check_box_tag :send_mail %>
  </div>  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
