<div class="le-havre-rounded">Mensagens</div>

<table class = "message">
  <tr>
    <th>Título</th>
    <th>Corpo da Mensagem</th>
    <th></th>
    <th>Ações</th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.title %></td>
    <td class = 'message'><%= raw(truncate(message.body, :length=>250, :separator => ' ')) %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to image_tag('trash.png'), message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Mensagem', new_message_path %>

